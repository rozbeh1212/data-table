 "version": "0.2.0",
 "configurations": [
  {
   "type": "chrome",
   "request": "launch",
   "name": "Launch Chrome against localhost",
   "url": "http://localhost:8080",
   "webRoot": "${workspaceFolder}/index.php"
  },   {
        "name": "Listen for XDebug",
            "type": "php",
            "request": "launch",
            "port": 9000,
            "pathMappings": {
                "/var/www/": "${workspaceFolder}/index.php",  //localhost/test
            },
            "xdebugSettings": {
                "max_children": 256
            },
            "log": false,
        }
 ]
}